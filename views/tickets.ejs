<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ticket System</title>
    <link rel="stylesheet" href="/css/tickets.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

</head>
<body>

    <div class="container">
        
        <%- include("partials/_navigation") %>

    <!-- main start -->
        <div class="main">

    <div class="main-container">
        <div class="header">
            <div class="toggle">
                <i class="bi bi-list"></i>
            </div>
            <h1>TICKET DETAILS</h1>
            <button class="filter-toggle-btn" id="filterToggleBtn">Filter</button>
            <a href="/logout" class="btn btn-logout" title="Logout">
                <i class="bi bi-power"></i> LogOut
            </a>
        </div>
            <div class="filter-table-container">
                <div class="filter-header">
                    <div class="title-container">
                        <span id="resultCount" class="result-count"></span>
                    </div>
                </div>
        
                <div class="filter-panel" id="filterPanel">
                    <div class="filter-panel-content">
                        <div class="filter-section">
                            <h3>Category</h3>
                            <div class="quick-filter-grid">
                                <button class="quick-filter-panel-btn" data-filter="Software Issue">Software Issue</button>
                                <button class="quick-filter-panel-btn" data-filter="Hardware Issue">Hardware Issue</button>
                                <button class="quick-filter-panel-btn" data-filter="Network Issue">Network Issue</button>
                                <button class="quick-filter-panel-btn" data-filter="Other">Other</button>
                            </div>
                        </div>
        
                        <div class="filter-section">
                            <h3>Priority</h3>
                            <div class="priority-filters">
                                <button class="priority-filter-btn" data-priority="LOW">LOW</button>
                                <button class="priority-filter-btn" data-priority="MEDIUM">MEDIUM</button>
                                <button class="priority-filter-btn" data-priority="HIGH">HIGH</button>
                                <button class="priority-filter-btn" data-priority="CRITICAL">CRITICAL</button>
                            </div>
                        </div>
        
                        <div class="filter-section">
                            <h3>Sort By</h3>
                            <div class="sort-filters">
                                <button class="sort-filter-btn" data-sort="newest">NEWEST</button>
                                <button class="sort-filter-btn" data-sort="oldest">OLDEST</button>
                            </div>
                        </div>
        
                        <div class="filter-section">
                            <h3>Advanced Filters</h3>
                            <div class="search-filters">
                                <div class="search-filter-group">
                                    <label for="filterById">Filter by ID</label>
                                    <input type="text" id="filterById" placeholder="Enter ID">
                                </div>
                                <div class="search-filter-group">
                                    <label for="filterByName">Filter by Name</label>
                                    <input type="text" id="filterByName" placeholder="Enter name">
                                </div>
                                <div class="search-filter-group">
                                    <label for="filterByEmail">Filter by Email</label>
                                    <input type="text" id="filterByEmail" placeholder="Enter email">
                                </div>
                                <div class="search-filter-group">
                                    <label for="filterByTitle">Filter by Title</label>
                                    <input type="text" id="filterByTitle" placeholder="Enter title">
                                </div>
                                <div class="filter-actions">
                                    <button class="apply-filters-btn" id="applyFiltersBtn">Apply Filters</button>
                                    <button class="reset-filters-btn" id="resetFiltersBtn">Reset All</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            
                <div class="table-container" id="tableContainer">
                    <table class="tickets-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Title</th>
                                <th>Department</th>
                                <th>Priority</th>
                                <th>Category</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% tickets.forEach(ticket => { %>
                                <tr data-ticket-id="<%= ticket._id %>">
                                    <td><%= ticket._id %></td>
                                    <td><div class="status <%= ticket.status.toLowerCase() %>"><%= ticket.status %></div></td>
                                    <td><%= ticket.createdAt.toISOString().split('T')[0] %></td>
                                    <td><%= ticket.user.name %></td>
                                    <td><%= ticket.user.email %></td>
                                    <td><%= ticket.ticket.title %></td>
                                    <td><%= ticket.ticket.department %></td>
                                    <td><%= ticket.ticket.priority %></td>
                                    <td><%= ticket.ticket.category %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
    
            </div>
        

        
    </div>
</div>
    <script src="/js/admin.js"></script>
    <script src="/js/tickets.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>
